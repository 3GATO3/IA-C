@model IEnumerable<IACAST_WEB.Models.Episode>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de episodios</h1>

<p>

    @if (User.Identity.IsAuthenticated)
    {
       <a asp-action="Create">Create New</a>



    }
    
</p>
<table class="table table-warning">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Released)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Invitado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anfitrion)
            </th>
            <th>@Html.DisplayNameFor(model => model.Youtube)</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Theme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Released)
            </td>
           
            
            <td>
                @Html.DisplayFor(modelItem => item.Invitado)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Anfitrion)
            <td/>

            <td>
               
                <a href="@item.Youtube">ver episodio</a>
               
               
            </td>



            <td>
                
                        @if(User.Identity.IsAuthenticated) {
                        <a asp-action="Edit" asp-route-id="@item.Id"><em>Edit</em></a>
                            
                       
                        }
                        else{
                            <h6>Inicie sesion para editar</h6>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                         <a asp-action= "Delete" asp-route-id = "@item.Id" > Delete </a>


                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                        <a asp-action="Details" asp-route-id="@item.Id"> Details </a>
 


                        }



                         
                       


            </td>
        </tr>
}
    </tbody>
</table>
